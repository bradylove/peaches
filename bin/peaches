#!/usr/bin/env ruby

require 'peaches'

# Returns files found fuzzily from string
# Usage:
# peaches "search string"
# or
# peaches
finder = Peaches::Finder.new(Dir.pwd)

if ARGV.empty?
  while true do
    puts "Enter Search String: "
    string = gets.chomp
    
    results = finder.find(string)
    puts results
  end
else
  puts finder.find(ARGV[0])
end



